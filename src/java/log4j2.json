{
    "configuration": {
        "appenders": {
            "appender": [
                {
                    "type": "Console", 
                    "name": "STDOUT", 
                    "PatternLayout": { "pattern": "%d [%-5p] %C{1}.%M: %m%n" }
                },
                {
                    "type": "RollingFile",
                    "name": "RollingFile",
                    "fileName": "logs/app.log",
                    "PatternLayout": { "pattern": "%d [%-5p] %C{1}.%M: %m%n" },
                    "Policies":{ "SizeBasedTriggeringPolicy": { "size": "5MB" } },
                    "DefaultRolloverStrategy": { "max": "5" },
                    "filePattern": "logs/app-%d{yyyy-MM-dd-HH}-%i.log.gz"
                }
            ]
        },
        "loggers": {
            "logger": [
                {
                    "name": "dev",
                    "level": "info",
                    "additivity": "false",
                    "AppenderRef": {
                        "ref": "RollingFile"
                    }
                },
                {
                    "name": "dev-verbose",
                    "level": "trace",
                    "additivity": "false",
                    "AppenderRef": {
                        "ref": "RollingFile"
                    }
                }
            ],
            "root": {
                "level": "error",
                "AppenderRef": {
                    "ref": "RollingFile"
                }
            }
        }
    }
}